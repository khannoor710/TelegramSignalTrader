# Telegram Trading Bot - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=sqlite:///./trading_bot.db

# ============================================
# ENCRYPTION KEY (for password storage)
# ============================================
# Generate a new key using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here

# ============================================
# TELEGRAM API CREDENTIALS
# ============================================
# Get these from https://my.telegram.org
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash
TELEGRAM_PHONE_NUMBER=+1234567890

# ============================================
# ANGEL ONE BROKER CREDENTIALS
# ============================================
# Get these from your Angel One account
ANGEL_ONE_API_KEY=your_angel_one_api_key
ANGEL_ONE_CLIENT_ID=your_client_id
ANGEL_ONE_PASSWORD=your_password
# Optional: TOTP secret for 2FA
ANGEL_ONE_TOTP_SECRET=your_totp_secret

# ============================================
# APPLICATION SETTINGS
# ============================================
AUTO_TRADE_ENABLED=false
REQUIRE_MANUAL_APPROVAL=true
DEFAULT_QUANTITY=1
MAX_TRADES_PER_DAY=10
RISK_PERCENTAGE=1.0

# ============================================
# AI SIGNAL PARSING (Google Gemini - FREE)
# ============================================
# Get your FREE API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here
# Optional: Model selection (default: gemini-2.0-flash)
# Options: gemini-2.0-flash (fast, free), gemini-1.5-pro (more capable)
GEMINI_MODEL=gemini-2.0-flash
